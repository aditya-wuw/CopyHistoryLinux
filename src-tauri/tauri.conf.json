{
  "$schema": "https://schema.tauri.app/config/2.9.5",
  "productName": "copychan",
  "version": "0.1.0",
  "identifier": "con.Copychan",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "copyhistory",
        "width": 400,
        "height": 500,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "visible": false,
        "skipTaskbar": true,
        "closable": true,
        "transparent": true,
        "acceptFirstMouse": true,
        "contentProtected": true
      }
    ]
    ,
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset.localhost https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "resources" : ["icons/*"],
    "longDescription": "A lightweight clipbord manager",
    "icon": [
      "icons/CopychanSmol.png",
      "icons/Copychan.png",
      "icons/CopychanBig.png",
      "icons/icon.icns",
      "icons/CopychanIco.ico"
    ]
  }
}
